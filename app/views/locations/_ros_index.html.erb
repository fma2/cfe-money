<div class="search-bar-and-results-section">
	<%= form_tag(search_path(location), method: "get", onsubmit: "return false") do %>
	<div class="input-group" >
		<%= text_field_tag("search_text2", nil, placeholder: "search a #{location_name} school by school name or by district name (e.g. Albany)", size: 250, class:'form-control input-lg') %>
	</div>
	<% end %>
	<div id="results2"></div>
	<script type="text/javascript">
	$("#search_text2").keyup(function(event) {
		$("#school-info-section").css("visibility", "visible");
		$.get('/search/<%= location %>?search='+ $(this).val());
	});
	</script>
</div>

