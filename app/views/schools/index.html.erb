				</div>
				<!-- <a href="#about" class="btn btn-dark btn-lg">Search</a> -->
				<% end %>
				<div id="results"></div>
			
			</div>
		</div><!-- /input-group -->
	</div><!-- /.col-lg-6 -->
</div>	
<div class="row"><br><br></div>

<script type="text/javascript">
  $("#search_text").keyup(function(event) {
  	$.get('/search?search='+ $(this).val());
	});
</script>
