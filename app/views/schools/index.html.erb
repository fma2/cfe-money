<!-- Header -->
<section id="top" class="header">
	<div class="text-vertical-center">
		<h1 class="title">How much does NY State owe your school?</h1>
		<h4 class="subtitle">New York State shortchanged the entire New York City public school system by billions of dollars.<br>Find out how much they robbed from your school.</h4>
		<br>
		<div class="row">
			
			<div class="col-md-12">
				<%= form_tag(search_path, method: "get") do %>

				<div class="input-group" >
					<%= text_field_tag("search_text", nil, placeholder: "search by school name or dbn", size: 250, class:'form-control') %>
				</div>
				<!-- <a href="#about" class="btn btn-dark btn-lg">Search</a> -->
				<% end %>
				<a href="#more" class="btn btn-circle page-scroll">
					<i class="fa fa-angle-double-down animated"></i>
				</a>
				<div id="results"></div>
				<script type="text/javascript">
				$("#search_text").keyup(function(event) {
					$.get('/search?search='+ $(this).val());
				});
				</script>

			</div>

		</div><!-- /input-group -->
	</div><!-- /.col-lg-6 -->
</div>
</section>


<!-- About Section -->
<section id="more" class="container content-section text-center">
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			<h2>About Grayscale</h2>
			<p>Grayscale is a free Bootstrap 3 theme created by Start Bootstrap. It can be yours right now, simply download the template on <a href="http://startbootstrap.com/template-overviews/grayscale/">the preview page</a>. The theme is open source, and you can use it for any purpose, personal or commercial.</p>
			<p>This theme features stock photos by <a href="http://gratisography.com/">Gratisography</a> along with a custom Google Maps skin courtesy of <a href="http://snazzymaps.com/">Snazzy Maps</a>.</p>
			<p>Grayscale includes full HTML, CSS, and custom JavaScript files along with LESS files for easy customization.</p>
		</div>
	</div>
</section>
