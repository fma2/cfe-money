<div class="nav">
	<a href="#top" class="btn btn-xs btn-dark page-scroll">
		<i class="fa fa-chevron-up animated"></i>
	</a>
	<a href="#more" class="btn btn-xs btn-dark page-scroll">
		<i class="fa fa-chevron-down animated"></i>
	</a>
</div>
<!-- Search and title section -->
<header id="top" class="header">
	<div class="header-body">
		<div class="container">
			<div class="row">
				<div class="col-xs-12 col-md-12">
					<h1 class="title highlight-title">How much does NY State owe your school?</h1>
					<h4 class="subtitle highlight-title">New York State shortchanged the entire New York City public school system by billions of dollars.<br>Find out how much they robbed from your school.</h4>
					<br>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12 col-md-12">
					<%= form_tag(search_path, method: "get") do %>
					<div class="input-group" >
						<%= text_field_tag("search_text", nil, placeholder: "search by school name or dbn", size: 250, class:'form-control') %>
					</div>
					<% end %>
					<div id="results"></div>
					<script type="text/javascript">
					$("#search_text").keyup(function(event) {
						$.get('/search?search='+ $(this).val());
					});
					</script>
				</div>
			</div>
		</div>
	</div>
</header>
<!-- More Information Section -->
<section id="more" class="more-info content-section">
	<div class="container">
		<hr>
		<div class="row">
			<div class="col-xs-12 col-md-12">
				<div class="col-md-4">
					<div class="amount-owed-section">
						<h4 class="info-text">citywide total amount that NYC is owed from State</h4>
						<h3 class="info-number highlight-title">$2,500,000,000</h3>
					</div>
				</div>
				<div class="col-md-4">
					<div class="enrollment-section">
						<h4 class="info-text">official school register as of 10/31/2013</h4>
						<h3 class="info-number highlight-title">1,032,314</h3>
					</div>
				</div>
				<div class="col-md-4">
					<div class="amount-per-student-section">
						<h4 class="info-text">amount owed per student</h4>
						<h3 class="info-number highlight-title">$2421.74</h3>
					</div>
				</div>
			</div>
		</div>
		<hr>
		<div class="row">
			<div class="col-md-12">
				<h4>by district</h4>
				<div id="district-info">
				</div>
				<div id="district-buttons">
				</div>
				<hr>
			</div>
		</div>
	</div>
</section>

<footer>
	<div class="container text-center">
		<a href="http://farheenmalik.com" target="_blank">contact</a> / <a href="mailto:farheen.m.malik@gmail.com?Subject=CFE%20Site%20Feedback" target="_top">feedback</a>
	</div>
</footer>

<!-- Modal -->
<div class="modal fade" id="schoolModal" tabindex="-1" role="dialog" aria-labelledby="schoolModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="schoolModalLabel"></h4>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-lg-8">
						<div class="amount-owed-section">
							<div class="amount-text">amount owed</div>
							<div class="amount-number"></div>
						</div>
					</div>
					<div class="col-lg-4">
						<div class="enrollment-section">
							<div class="enrollment-text">total enrollment</div>
							<div class="enrollment-number"></div>
						</div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
			</div>
		</div>
	</div>
</div>

