<div class="container cover-body">
	<div class="row text-center school-search-result intro-text">
		<div class="col-xs-12">
			<a href="#search-section" class="btn btn-circle page-scroll warning-text">
				<i class="fa fa-angle-double-up animated"></i>
			</a>
			<h1 class="warning-text">Looks like no schools were found.  Return to the top try again.</h1>
		</div>
	</div>
	<div class="row school-section" id="school-information">
		<div class="col-xs-12 col-sm-6 school-details">
			<div class="row">
				<div class="col-xs-12">
					<h1 class="schoolInfoLabel"><span class="school-title"></span><span class="school-title-dbn"></span><span class="school-title-district"></span></h1>
				</div>
				<div class="col-xs-12">
					<h2 class="amount-text">Total amount owed:<br><span class="amount-number"></span></h2>
				</div>
				<div class="col-xs-12">
					<h2 class="per-student-number">Per student: <br><span class="per-student-amount"></span></h2>	
				</div>
			</div>
		</div>
		<div class="col-xs-12 col-sm-6 resources-list">
			<div class="row">
				<div class="col-xs-12">
					<h3>Students at <span class="school-title"></span> are missing out on:</h3>
					<div class="row resource-item resource-teacher">
						<div class="col-xs-6 resource-image">
							<%= image_tag('brain.svg')  %>
						</div>
						<div class="col-xs-6 resource-text">
							<h4></h4>
						</div>
					</div>
					<div class="row resource-item resource-arts">
						<div class="col-xs-6 resource-image">
							<%= image_tag('online.svg')  %>							
						</div>
						<div class="col-xs-6 resource-text">
							<h4></h4>
						</div>
					</div>
					<div class="row resource-item resource-library">
						<div class="col-xs-6 resource-image">
							<%= image_tag('book.svg')  %>				
						</div>
						<div class="col-xs-6 resource-text">
							<h4></h4>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row school-section" >
		<div class="col-xs-12" id="next-steps">
			<h3>Think that our students and schools deserve better?</h3>
			<h3>See what you can do to take action</h3>
			<a href="#take-action-section" class="btn btn-circle page-scroll">
				<i class="fa fa-angle-double-down animated"></i>
			</a>
		</div>
	</div>
	<!-- <div class="row">
		<div class="col-xs-12" id="share-school">
			<a target="_blank">Share</a>
		</div>
	</div> -->
</div>